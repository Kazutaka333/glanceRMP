{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["rmp-api.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Make this page red"
  },

  "manifest_version": 2
}